// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // For local development with SQLite, you can use a separate .env.local file
  // For production, DATABASE_URL will point to Supabase PostgreSQL
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      String   @default("student") // "student" or "verifier" or "admin"
  image     String?  // Profile picture from OAuth
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  verifiedActivities Verification[] @relation("VerifierVerifications")
  studentActivities Verification[] @relation("StudentVerifications")
  activities         Activity[]

  @@map("users")
}

model Verification {
  id              String   @id @default(cuid())
  activityId      String   @unique // Links to the activity being verified (one-to-one)
  verifierId      String   // Teacher/club leader who verifies
  studentId       String   // Student who owns the activity
  status          String   @default("pending") // "pending", "verified", "denied"
  verifierNotes   String?  // Notes from verifier
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  verifier        User     @relation("VerifierVerifications", fields: [verifierId], references: [id])
  student         User     @relation("StudentVerifications", fields: [studentId], references: [id])
  activity        Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@map("verifications")
}

model Activity {
  id            String   @id @default(cuid())
  studentId     String   // Student who added this activity
  name          String   // Activity name/title
  category      String   // Common App categories
  description   String
  role          String?  // Student's role/position
  supervisor    String?  // Teacher/club advisor name
  supervisorEmail String? // Supervisor's email
  organization  String?  // Club/organization name
  startDate     String
  endDate       String?
  hoursPerWeek  Float?
  totalHours    Float?
  status        String   @default("pending") // "pending", "verified", "denied"
  studentNotes  String?  // Notes from student
  attachments   String?  // JSON string of attachments: {photos: [], certificates: [], portfolioLinks: []}
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  student       User          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  verification  Verification?

  @@map("activities")
}
